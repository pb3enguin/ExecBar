<Window x:Class="ExecBar.AddActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Modify Action" Height="220" Width="560">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Action Name:" VerticalAlignment="Center"/>
            <TextBox x:Name="ActionNameTextBox" Width="350" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBlock Text="Path:" VerticalAlignment="Center"/>
            <TextBox x:Name="PathTextBox" Width="350" Margin="55,0,0,0"/>
            <Button Content="File" Click="FileButton_Click" Margin="10,0,0,0"/>
            <Button Content="Folder" Click="FolderButton_Click" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="OK" Click="OkButton_Click" Width="100" Height="35" Margin="5"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="100" Height="35" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
